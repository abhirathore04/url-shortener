{
  "name": "url-shortener",
  "version": "0.1.0",
  "description": "Production-grade URL shortener service",
  "main": "dist/index.js",
  "scripts": {
    "dev": "nodemon --exec ts-node src/index.ts",
    "build": "npm run clean && tsc",
    "start": "node dist/index.js",
    "clean": "rimraf dist coverage",
    "lint": "eslint src --ext .ts --fix --ignore-pattern 'src/services/__tests__/**'",
    "lint:check": "eslint src --ext .ts --ignore-pattern 'src/services/__tests__/**'",
    "lint:ci": "eslint src --ext .ts --format json --output-file eslint-report.json",
    "type-check": "tsc --noEmit",
    "format": "prettier --write \"src/**/*.{ts,js,json,md}\"",
    "format:check": "prettier --check \"src/**/*.{ts,js,json,md}\"",
    "test": "jest",
    "test:database": "ts-node src/database/test-connection.ts",
    "test:unit": "jest --testMatch='**/tests/unit/**/*.test.ts' --coverage --coverageDirectory=coverage/unit",
    "test:integration": "jest --testMatch='**/tests/integration/**/*.test.ts' --coverage --coverageDirectory=coverage/integration --runInBand",
    "test:e2e": "jest --testMatch='**/tests/e2e/**/*.test.ts' --runInBand --detectOpenHandles",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage && open-cli coverage/lcov-report/index.html",
    "test:ci": "jest --ci --coverage --coverageReporters=text-lcov --passWithNoTests",
    "docker:build": "docker build -t url-shortener:latest .",
    "docker:run": "docker run -p 8080:8080 url-shortener:latest",
    "docker:compose:up": "docker compose -f ../infra/docker-compose.yml up -d",
    "docker:compose:down": "docker compose -f ../infra/docker-compose.yml down",
    "security:audit": "npm audit --audit-level high",
    "security:fix": "npm audit fix",
    "deps:update": "npm-check-updates -u && npm install",
    "deps:check": "npm-check-updates --doctor"
  },
  "keywords": [
    "url",
    "shortener",
    "api",
    "typescript",
    "express",
    "mongodb"
  ],
  "author": "Your Name",
  "license": "MIT",
  "dependencies": {
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "dotenv": "^16.4.7",
    "express": "^4.21.2",
    "express-rate-limit": "^7.1.5",
    "helmet": "^8.0.0",
    "ioredis": "^5.3.2",
    "mongodb": "^6.3.0",
    "pino": "^9.5.0",
    "pino-pretty": "^13.0.0",
    "prometheus-api-metrics": "^3.2.2",
    "sqlite": "^5.1.1",
    "sqlite3": "^5.1.7"
  },
  "devDependencies": {
    "@types/compression": "^1.8.1",
    "@types/cors": "^2.8.17",
    "@types/express": "^5.0.0",
    "@types/jest": "^29.5.12",
    "@types/node": "^20.17.10",
    "@types/sqlite3": "^3.1.11",
    "@types/supertest": "^6.0.2",
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "@typescript-eslint/parser": "^6.21.0",
    "eslint": "^8.57.1",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-import": "^2.31.0",
    "eslint-plugin-security": "^1.7.1",
    "jest": "^29.7.0",
    "jest-junit": "^16.0.0",
    "mongodb-memory-server": "^9.1.3",
    "nodemon": "^3.1.9",
    "npm-check-updates": "^16.14.12",
    "open-cli": "^8.0.0",
    "prettier": "^3.4.2",
    "rimraf": "^6.0.1",
    "supertest": "^7.0.0",
    "ts-jest": "^29.1.2",
    "ts-node": "^10.9.2",
    "typescript": "^5.7.2"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "roots": [
      "<rootDir>/tests",
      "<rootDir>/src"
    ],
    "testMatch": [
      "**/tests/**/*.test.ts"
    ],
    "collectCoverageFrom": [
      "src/**/*.ts",
      "!src/**/*.d.ts",
      "!src/index.ts",
      "!src/**/*.spec.ts"
    ],
    "coverageDirectory": "coverage",
    "coverageReporters": [
      "text",
      "lcov",
      "html",
      "json"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 70,
        "functions": 70,
        "lines": 70,
        "statements": 70
      }
    },
    "setupFilesAfterEnv": [
      "<rootDir>/tests/setup.ts"
    ],
    "testTimeout": 30000
  },
  "engines": {
    "node": ">=20.0.0",
    "npm": ">=10.0.0"
  }
}
